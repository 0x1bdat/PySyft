#!/bin/bash
while [ $# -gt 0 ]; do
  case "$1" in
    --tag=*)
      tag="${1#*=}"
      ;;
    --name=*)
      name="${1#*=}"
      ;;
    --port=*)
      port="${1#*=}"
      ;;
    --type=*)
      type="${1#*=}"
      ;;
    *)
      printf "***************************\n"
      printf "* Error: Invalid argument.*\n"
      printf "***************************\n"
      exit 1
  esac
  shift
done

./stop --name="$name" --port=$port --type="$type"

printf "\n\nLaunching new domain node '%s'" "$name"
printf " on port %s\n\n" "$port"

tag=$(echo -n $name | md5sum); echo $name
tag="$( cut -d ' ' -f 1 <<< "$tag" )"

DOMAIN_PORT=$port TRAEFIK_TAG=$tag DOMAIN_NAME=$name NODE_TYPE=$type docker compose -p $tag up

