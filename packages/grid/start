#!/bin/bash
while [ $# -gt 0 ]; do
  case "$1" in
    --tag=*)
      tag="${1#*=}"
      ;;
    --name=*)
      name="${1#*=}"
      ;;
    --port=*)
      port="${1#*=}"
      ;;
    *)
      printf "***************************\n"
      printf "* Error: Invalid argument.*\n"
      printf "***************************\n"
      exit 1
  esac
  shift
done

printf "\n\nLaunching new domain node '%s'" "$name"
printf " on port %s\n\n" "$port"

tag=$(md5 <<< $name)

DOMAIN_PORT=$port TRAEFIK_TAG=$tag DOMAIN_NAME=$name docker compose -p $tag up

